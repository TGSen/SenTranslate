<?xml version="1.0" encoding="utf-8"?>
<imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <imagepicker.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />




    <imagepicker.view.SquareImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/bg_red_rectangle" />



</imagepicker.view.SquareRelativeLayout>